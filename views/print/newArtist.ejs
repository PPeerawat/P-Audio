<%- include("../partials/header.ejs") %>
<div class="container">
    <h1>Add new artist</h1>
    <form action="/artist" method="POST">
        <div class="mb-3">
            <label class="form-label">Artist</label>
            <input type="text" class="form-control" name="artist[name]" placeholder="Type an artist name" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Image URL(Artist's image)</label>
            <input type="text" class="form-control" name="artist[img]" placeholder="Image URL" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/">Go back</a>
    </form>
</div>
